<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--namespace=绑定一个指定的Dao/Mapper接口-->
<mapper namespace="com.atduu.mapper.TypeMapper">

    <insert id="save" parameterType="Type">
        insert into t_type values  ( #{id} , #{name} )
    </insert>

    <update id="updateType" parameterType="Type">
        update t_type set name = #{name} where id = #{id}
    </update>

    <select id="findTypeById" resultType="Type">
        select * from t_type where id = #{id}
    </select>

    <select id="findAll" resultType="Type">
        select * from t_type
    </select>

    <delete id="deleteTypeById">
        delete  from  t_type where id = #{id}
    </delete>

    <select id="findTypeByName" resultType="Type">
        select * from t_type where name = #{name};
    </select>


</mapper>